<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redirecting...</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding-top: 100px;
        }
        .timer {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="timer" id="timer">Redirecting in 30 seconds...</div>

    <script>
        // Function to start timer and redirect after 30 seconds
        function startTimer(url) {
            var timeLeft = 30; // 30 seconds timer
            var countdown = setInterval(function() {
                document.getElementById('timer').innerText = 'Redirecting in ' + timeLeft + ' seconds...';
                timeLeft -= 1;
                if (timeLeft < 0) {
                    clearInterval(countdown);
                    window.location.href = url; // Redirect to original URL
                }
            }, 1000);
        }

        // Get the shortened URL from the current URL
        var urlParams = new URLSearchParams(window.location.search);
        var shortUrl = urlParams.get('url');

        // Redirect to original URL after 30 seconds
        if (shortUrl) {
            startTimer(shortUrl);
        } else {
            // If no shortened URL is provided, redirect to homepage
            window.location.href = '/';
        }
    </script>
</body>
</html>
